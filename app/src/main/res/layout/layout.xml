<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp">


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:layout_marginLeft="15dp"
                android:text="Cash:"
                android:textColor="@color/black"
                android:textSize="18sp"
                />



            <EditText
                android:id="@+id/cashEdt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:layout_marginRight="25dp"
                android:hint="0.00"
                android:paddingRight="9dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layount_Card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:text="Card:"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cardAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_marginRight="25dp"
                android:hint="Card Amt"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:selectAllOnFocus="true"
                android:textSize="15sp">

            </EditText>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layount_Cash"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:text="Upi / online"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/upiAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_marginRight="25dp"
                android:hint="upi Amount"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:selectAllOnFocus="true"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layount_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:text="Email Id"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/emailId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_marginRight="25dp"
                android:hint="Enter Emailid"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:selectAllOnFocus="true"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/IdReturnChangeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:layout_marginLeft="15dp"
                android:text="Invoice"
                android:textColor="@color/black"
                android:textSize="15sp" />



            <EditText
                android:id="@+id/invoiceAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_marginRight="25dp"
                android:hint="0.00"
                android:paddingRight="10dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/orange"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/totalTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:layout_marginLeft="15dp"
            android:text="Total : "
            android:textColor="@color/black"
            android:textSize="15sp" />



        <TextView
            android:id="@+id/balTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:text="Balance : "
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:padding="3dip"
        android:text="OK"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:visibility="visible" />

</LinearLayout>
