<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/IdSNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="SNo"
                android:padding="1sp"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdJobCardNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="J.C.No"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdDateTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdVehicleNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="V.No"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdTimeInTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TimeIn"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdTimeOutTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="TimeOut"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdSparePartsTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="SpareParts"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdServChargeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="S.Charge"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdStatusTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports"
                android:visibility="visible" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolour"/>
    </LinearLayout>


</LinearLayout>