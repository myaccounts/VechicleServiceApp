<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/IdSnoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="SNo"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdTransDatetv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TransDate"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdTransTypetv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TransType"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdItemDesctv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="ItemDesc"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdUomtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="UOM"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdOpenQtytv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="OpenQty"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdReceivedtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="ReceivedQty"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdIssuedtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="IssuedQty"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />

            <TextView
                android:id="@+id/IdBalQtytv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Bal.Qty"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports"
                android:visibility="visible" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolour"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>