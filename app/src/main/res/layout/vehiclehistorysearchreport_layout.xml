<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gowheelbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/dialog_background"
                android:layout_margin="5dp"
                android:id="@+id/inputJobcardSearchEdt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Vehicle No"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:drawableRight="@drawable/search_icon"
                android:singleLine="true" />

            <LinearLayout
                android:weightSum="1"
                android:id="@+id/DateSelectionLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/IdFrmDateTv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/dialog_background"
                    android:drawableRight="@drawable/calender_icon"
                    android:gravity="center"
                    android:hint="FromDate"
                    android:padding="5sp" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/IdToDateTv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/dialog_background"
                    android:drawableRight="@drawable/calender_icon"
                    android:gravity="center"
                    android:hint="ToDate"
                    android:padding="5sp" />

                <ImageView
                    android:background="@drawable/dialog_background"
                    android:id="@+id/refresh_vehicle_history"
                    android:padding="10dp"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/refresh"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:text="SNo"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="J.C.No"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="KMReading"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="Technician"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Date"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="V.No"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="TimeIn"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="TimeOut"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="SpareParts"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="S.Charge"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports" />

                        <View
                            android:layout_width="0.01dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeReports"
                            android:visibility="visible" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/IdJobCardHistoryRecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text="@string/textDetails" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>