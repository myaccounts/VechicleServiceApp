                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
