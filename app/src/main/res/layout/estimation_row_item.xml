<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/IdSnoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="SNo"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdTranNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Vehicle Model Name"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdJobCardNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="J.C.No"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/IdCustomerNameTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Customer"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdMobileNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/SparePartTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Spare Part"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdServicesTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Services"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdAmountTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolour"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>