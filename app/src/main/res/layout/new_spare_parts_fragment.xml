<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/spareFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="78dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColorHint="#000">

                <EditText
                    android:id="@+id/IdSparePartEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableRight="@drawable/search_icon"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Spare Part*"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/textSize"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:textColorHint="#000">

                <EditText
                    android:id="@+id/IdQtyEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:hint="@string/qty"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/textSize"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/MainServiceServiceIssueTypeSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingRight="35dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/AvlQtyTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:hint="@string/qty"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="@dimen/textSize"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/UomTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:hint="@string/qty"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="@dimen/textSize"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mrpTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:hint="@string/qty"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="@dimen/textSize"
                android:textStyle="normal"
                android:visibility="gone" />
            <TextView
                android:id="@+id/freemrpTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:hint="@string/qty"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="@dimen/textSize"
                android:textStyle="normal"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/AddImgBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/addbtn" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinerLayOut5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="SNo"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:text="SparePartName"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="UOM"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />

                    <!--                    <View-->
                    <!--                        android:layout_width="0.1dp"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:background="@color/viewcolour" />-->

                    <!--                    <TextView-->

                    <!--                        android:layout_width="0dp"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:layout_gravity="left"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:text="AVL.QTY"-->
                    <!--                        android:textAllCaps="true"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="@dimen/textSizeforreports"-->
                    <!--                        android:textStyle="normal" />-->

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MRP"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="RATE"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="QTY"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />


                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="RATE"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />
                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Issue Type"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:visibility="gone"
                        android:textStyle="normal"
                        />


                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ACTIONS"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/viewcolour" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SparePartrecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    android:listSelector="@color/black"
                    android:scrollbars="vertical">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/TotalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimary"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="Rows:"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/TotalNoRowsTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|left"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Qty :"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/TotalQtyTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|left"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="Free Amt :"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/FreeTotalTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|left"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="0.00"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewcolour" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Amount :"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeforreports"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/TotalAmtTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|left"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="0.00"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:textStyle="normal" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/sparePartsSelectedFragmentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:visibility="visible"
            app:backgroundTint="@color/btn_colored_background_tint" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>