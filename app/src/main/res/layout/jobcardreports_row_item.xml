<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:id="@+id/lr">

        <LinearLayout
            android:id="@+id/JobCardRowLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_row"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/IdSnotxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="2sp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="SNo"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSizeSize" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdjobCardNotxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.10"
                android:padding="2sp"
                android:text="JOBCardNo"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSizeSize" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdVehicleNotxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.10"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="VehicleNo"
                android:padding="2sp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSizeSize" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:padding="2sp"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/IdNametxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumTextSizeSize" />

                <TextView
                    android:id="@+id/IdMobileNotxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/IdNametxt"
                    android:singleLine="true"
                    android:text="MobileNo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumTextSizeSize"
                    android:visibility="visible" />

            </RelativeLayout>

            <!--        <View-->
            <!--            android:layout_width="0.01dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:background="@color/black"/>-->

            <!--        <View-->
            <!--            android:layout_width="0.01dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:background="@color/black"-->
            <!--            android:visibility="gone"/>-->

            <!--        <TextView-->
            <!--            android:id="@+id/IdBlocktxt"-->
            <!--            android:layout_width="0dp"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_weight="0.8"-->
            <!--            android:text="Block"-->
            <!--            android:gravity="center"-->
            <!--            android:textSize="@dimen/textSize"-->
            <!--            android:visibility="gone"-->
            <!--            android:textColor="@color/black"/>-->
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <ImageView
                android:id="@+id/IdStatustxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="Status"
                android:padding="5sp"
                android:layout_margin="1dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dialogtextSize"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolour" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>