<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/IdSNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="SNo"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdTranNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TranNo"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdJobCardNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="JobCard"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/IdCustomerNameTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Customer"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdMobileNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdSparePartCountTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="SpareParts"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdServiceCountTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="S.Count"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />

            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/IdAmountTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeReports" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolour"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>